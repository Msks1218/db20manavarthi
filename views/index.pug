extends layout

block content
  h1= title
  p Welcome to #{title} Snajay Krishna Manavarthi
  if (!user)
    a(href="/login") Login
    br
    a(href="/register") Register
  if (user)
    p You are currently logged in as #{user.username}
    a(href="/vegetables") Take me to vegetables
    br
    a(href="/logout") Logout
  br
  br
  button(type='button',onclick='update()',class='btn btn-primary') Press Me
  br
  br 
  div(id="target") text of Display 
  br
  a(href='vegetables') vegetables page

  script.
    var client_count = 0;
    function update(){
      client_count +=1;
      document.getElementById("target").innerHTML = "Value now " + client_count;
    }
  
